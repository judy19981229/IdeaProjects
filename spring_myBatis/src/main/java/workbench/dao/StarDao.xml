<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="workbench.dao.StarDao">
    <select id="selectStar" resultType="workbench.entity.Star">
        select * from star;
    </select>
    <select id="selectClass" resultType="map">
        select s.name,c.className
        from star s join classroom c
        on s.class=c.id

    </select>

    <select id="selectStarAndClass" resultType="vo.StarAndClass">
        select s.id,s.name,s.age,c.classId,c.className
        from star s join classroom c
        on s.class=c.classId
        <where>
            <if test="name!=null and name!=''">
                s.name like '%' #{name} '%'
            </if>
        </where>
    </select>

</mapper>
